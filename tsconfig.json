{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "target": "es2015",
        "lib": ["es2016", "esnext.asynciterable"]
    },
    "compileOnSave": true,
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}